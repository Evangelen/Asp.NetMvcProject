@model Company.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";

}

<h2>Register</h2>

<form method="post" action="/EmployeeFunctions/Employee/register" enctype="multipart/form-data">

    @Html.Label("Profile Picture")
    @{ Html.RenderPartial("Image");}

    @Html.LabelFor(m => m.Name)
    <br />
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name)

    <br /><br />

    @Html.LabelFor(m => m.Email)
    <br />
    @Html.TextBoxFor(m => m.Email)
    @Html.ValidationMessageFor(m => m.Email)

    <br /><br />

    @Html.LabelFor(m => m.Mobile)
    <br />
    @Html.TextBoxFor(m => m.Mobile)
    @Html.ValidationMessageFor(m => m.Mobile)

    <br /><br />

    @Html.LabelFor(m => m.Password)
    <br />
    @Html.PasswordFor(m => m.Password)
    @Html.ValidationMessageFor(m => m.Password)

    <br /><br />

    @Html.LabelFor(m => m.ConfirmPassword)
    <br />
    @Html.PasswordFor(m => m.ConfirmPassword)
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <br /><br />

    @Html.LabelFor(m => m.DepartmentID)
    <br />
    @Html.DropDownListFor(m => m.DepartmentID, new SelectList(ViewBag.Departments, "DeptId", "DeptName"), "Please Select")
    @Html.ValidationMessageFor(m => m.DepartmentID)

    <br /><br />

    @Html.LabelFor(m => m.Designation)
    <br />
    @Html.TextBoxFor(m => m.Designation)
    @Html.ValidationMessageFor(m => m.Designation)

    <br /><br />

    @Html.LabelFor(m => m.Role)
    <br />
    @Html.DropDownListFor(m => m.Role, new List<SelectListItem>() { new SelectListItem() { Text = "General Employee", Value = "GeneralEmployee" },
                                                                    new SelectListItem {Text="HR Department",Value="HRDept" },
                                                                    new SelectListItem { Text="Project Manager",Value="ProjectManager"} }, "Please Select", new { @id = "role" })
    @Html.ValidationMessageFor(m => m.Role)

    <br /><br />
    <div id="roleBased">

        @Html.LabelFor(m => m.IsSpecialPermission)
        <br />
        @Html.RadioButtonFor(m => m.IsSpecialPermission, "true")
        @Html.ValidationMessageFor(m => m.IsSpecialPermission)

        <br /><br />
    </div>

    <h3>Educational Qualifications</h3>

    <button id="add-btn">Add Education</button>

    <div class="edu">
        <div id="added-edu">

            <input type="hidden" id="EmpEdu_index" name="EmpEduIndex" value="0" />

            <label for="EmpEdu_0__EduLevel">Level of Education</label>
            <input id="EmpEdu_0__EduLevel" name="EmpEdu[0].EduLevel" type="text" value="" />

            <label for="EmpEdu_0__EduYOP">Year Of Passing</label>
            <input id="EmpEdu_0__EduYOP" name="EmpEdu[0].EduYOP" type="text" value="" /><br />

            @*<input type="hidden" id="EmpEdu_index" name="EmpEduIndex" value="1" />

            <label for="EmpEdu_1__EduLevel">Level of Education</label>
            <input id="EmpEdu_1__EduLevel" name="EmpEdu[1].EduLevel" type="text" value="" />

            <label for="EmpEdu_1__EduYOP">Year Of Passing</label>
            <input id="EmpEdu_1__EduYOP" name="EmpEdu[1].EduYOP" type="text" value="" /><br />*@

        </div>
    </div>


    <input type="submit" value="Submit" />

</form>

<script>
    $('#add-btn').click(function () {
        event.preventDefault();
        var oldindex = $('input[name=EmpEduIndex]').last().attr('value');
        var index = parseInt(oldindex) + 1;
        var text1 = '<input type="hidden" id="EmpEdu_index" name="EmpEduIndex" value=' + index + ' />';
        var text2 = '<label for="EmpEdu_' + index + '__EduLevel">Level of Education</label>';
        var text3 = '<input id="EmpEdu_' + index + '__EduLevel" name="EmpEdu[' + index + '].EduLevel" type="text" value="" />';
        var text4 = '<label for="EmpEdu_' + index + '__EduYOP">Year Of Passing</label>';
        var text5 = '<input id="EmpEdu_' + index + '__EduYOP" name="EmpEdu[' + index + '].EduYOP" type="text" value="" /><br />';

        $('#added-edu').append(text1, text2, text3, text4, text5);

    });
</script>

<script>
    $(document).ready(function () {
        $('#role').on('change', function () {
            if ($(this).val() =="HRDept") {
                $('#roleBased').show();
            }
            else {
                $('#roleBased').hide();
            }
        });
    })
</script>